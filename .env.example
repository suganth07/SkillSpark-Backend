# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# ===== REQUIRED VARIABLES =====

# Gemini AI API Key (Required)
# Get your API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSyCMgBUpbUZQgspUpNk-oihNaqcbMjbqn6c

# YouTube Data API Key (Required)
# Get your API key from https://console.developers.google.com/
YOUTUBE_API_KEY=AIzaSyAAgkVpqanYXW0-IvxAwkgEFBseOw9HV8M

# Supabase Configuration (Required)
# Get these from your Supabase project settings
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# ===== OPTIONAL VARIABLES =====

# Server Configuration
NODE_ENV=development

# Security Configuration
# CORS Configuration
# Comma-separated list of allowed origins (leave empty to allow all origins)
# Example: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=

# Rate Limiting Configuration
# General rate limit (requests per 15 minutes per IP)
GENERAL_RATE_LIMIT=100

# Roadmap generation rate limit (requests per minute per IP)
ROADMAP_RATE_LIMIT=5

# Playlist generation rate limit (requests per minute per IP)
PLAYLIST_RATE_LIMIT=10

# Logging Configuration
# Set to 'true' to enable detailed request logging
ENABLE_REQUEST_LOGGING=true

# Set to 'true' to log to files (logs will be saved in ./logs directory)
ENABLE_FILE_LOGGING=true

# Performance Configuration
# Request timeout in milliseconds
REQUEST_TIMEOUT=30000

# Maximum request body size
MAX_REQUEST_SIZE=10mb
